# =========================
# 数据库配置
# =========================
DB_HOST=localhost           # 数据库主机
DB_PORT=3306                # 数据库端口
DB_NAME=your_db_name        # 数据库名
DB_USER=your_db_user        # 数据库用户名
DB_PASS=your_db_password    # 数据库密码

# =========================
# JWT 配置
# =========================
JWT_SECRET=your_jwt_secret  # JWT签发密钥

# =========================
# 服务端口
# =========================
PORT=3000                   # 服务监听端口

# =========================
# 文件上传路径（如需自定义）
# =========================
UPLOAD_DIR=Files            # 文件上传主目录
UPLOAD_IMAGES=Files/images  # 图片存储目录
UPLOAD_PACKAGES=Files/packages # 软件包存储目录
UPLOAD_OTHER=Files/other    # 其他文件存储目录

# =========================
# 限流相关（如需自定义）
# =========================
# 注册/登录接口：1分钟最多10次
AUTH_LIMIT_WINDOW=60        # 秒
AUTH_LIMIT_MAX=100           # 次
# 点赞/收藏接口：30秒最多20次
LIKE_LIMIT_WINDOW=30        # 秒
LIKE_LIMIT_MAX=50           # 次
# 评论接口：30秒最多10次
COMMENT_LIMIT_WINDOW=30     # 秒
COMMENT_LIMIT_MAX=10        # 次